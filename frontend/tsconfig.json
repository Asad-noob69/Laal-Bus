{
  "compilerOptions": {
    "target": "ES6", // Keep targeting ES6 for broad compatibility
    "module": "ESNext", // Use ESNext for dynamic imports and tree-shaking
    "jsx": "react-jsx", // Use the modern React JSX transform
    "strict": true, // Enables all strict type-checking options
    "esModuleInterop": true, // Allows ES module default imports
    "moduleResolution": "Node", // Resolves modules in Node.js style
    "skipLibCheck": true, // Skips type-checking of declaration files for faster builds
    "resolveJsonModule": true, // Allows importing JSON files
    "allowSyntheticDefaultImports": true,
    "outDir": "dist", // Specifies the output folder for compiled files
    "rootDir": "src", // Specifies the root folder of your source files
    "forceConsistentCasingInFileNames": true, // Enforce case-sensitive imports
    "baseUrl": "./", // Base URL for resolving non-relative imports
    "paths": {
      "@/*": ["src/*"], // Import alias for the `src` directory
      "@/components/*": ["src/components/*"] // Alias for the `components` folder
    }
  },
  "include": ["src"], // Include all source files in the `src` folder
  "exclude": ["node_modules", "dist"] // Exclude `node_modules` and build output
}
