{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",    // Add this line to explicitly set source directory
    "target": "ES6",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,  // Add this to avoid issues with dependency type checking
    "forceConsistentCasingInFileNames": true  // Add this for cross-platform compatibility
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}